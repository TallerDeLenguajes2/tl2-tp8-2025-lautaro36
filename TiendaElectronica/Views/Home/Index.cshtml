@{
    ViewData["Title"] = "Home Page";
}

<!doctype html>
<html lang="es">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <title>Bienvenido</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Incluye iconos para un mejor estilo visual -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>

<body class="bg-light">
    <div class="container py-5">
        <header class="text-center mb-5">
            <h1 class="fw-bold display-4 text-primary">Bienvenido a Tienda Electrónica</h1>
            <p class="text-muted fs-5 mb-0">Gestione productos y presupuestos de su inventario.</p>
        </header>

        <main class="d-flex justify-content-center">
            <div class="row g-4 w-100" style="max-width: 900px;">

                <!-- Tarjeta de Gestión de Productos -->
                <div class="col-md-6">
                    <div class="card shadow-lg border-0 h-100">
                        <div class="card-body p-4 text-center">
                            <i class="bi bi-box-seam display-4 text-warning mb-3"></i>
                            <h2 class="h3 card-title fw-bold">Gestión de Productos</h2>
                            <p class="card-text text-muted">Visualice, agregue o modifique el inventario de productos disponibles.</p>
                            <a asp-controller="Productos" asp-action="Index" class="btn btn-warning mt-3 w-100">
                                <i class="bi bi-list-check me-2"></i> Ir al Listado de Productos
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Tarjeta de Gestión de Presupuestos -->
                <div class="col-md-6">
                    <div class="card shadow-lg border-0 h-100">
                        <div class="card-body p-4 text-center">
                            <i class="bi bi-currency-dollar display-4 text-success mb-3"></i>
                            <h2 class="h3 card-title fw-bold">Gestión de Presupuestos</h2>
                            <p class="card-text text-muted">Cree, modifique y revise los presupuestos para clientes.</p>
                            <a asp-controller="Presupuestos" asp-action="Index" class="btn btn-success mt-3 w-100">
                                <i class="bi bi-journal-text me-2"></i> Ir al Listado de Presupuestos
                            </a>
                        </div>
                    </div>
                </div>

            </div>
        </main>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
