@model TiendaElectronica.Models.Producto
@{
    ViewData["Title"] = "Alta producto";
}

<!doctype html>
<html lang="es">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <title>Alta de Producto</title>
    <!-- Incluye Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body class="bg-light">
    <div class="container py-5">

        <header class="text-center mb-5">
            <h1 class="fw-bold text-primary">Alta de productos</h1>
            <p class="text-muted fs-5 mb-0">Crear un nuevo producto en el sistema</p>
        </header>

        <main>
            <section>
                <!-- Contenedor principal con estilo de tarjeta y sombra -->
                <div class="card shadow-lg border-0">
                    <div class="card-header bg-primary text-white">
                        <h2 class="h5 mb-0">Complete cada campo</h2>
                    </div>
                    
                    <!-- Adaptación para formulario: utiliza p-4 para padding dentro del body -->
                    <div class="card-body p-4">
                        <form asp-controller="Productos" asp-action="Create" method="post">
                            
                            <div class="mb-3">
                                <label asp-for="@Model.Descripcion" class="form-label fw-semibold">Descripción</label>
                                <input asp-for="@Model.Descripcion" class="form-control" placeholder="Ej: Monitor LED 27 pulgadas" />
                                <span asp-validation-for="@Model.Descripcion" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="@Model.Precio" class="form-label fw-semibold">Precio ($)</label>
                                <input asp-for="@Model.Precio" class="form-control" type="number" step="0.01" placeholder="Ej: 299.99" />
                                <span asp-validation-for="@Model.Precio" class="text-danger"></span>
                            </div>
                            
                            <button type="submit" class="btn btn-primary mt-3 w-100">
                                <i class="bi bi-save me-2"></i> Crear Producto
                            </button>
                            
                            <a asp-controller="Productos" asp-action="Index" class="btn btn-outline-secondary mt-2 w-100">
                                Volver al Listado
                            </a>
                        </form>
                    </div>
                </div>
            </section>
        </main>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    
    @*Iconos de Bootstrap*@
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</body>

</html>
