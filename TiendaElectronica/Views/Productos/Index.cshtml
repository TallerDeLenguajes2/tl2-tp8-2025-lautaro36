@model List<TiendaElectronica.ViewModels.ProductoViewModel>
@{
    ViewData["Title"] = "Listado de Productos";
}

<!doctype html>
<html lang="es">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <title>Listado de Productos</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Incluye iconos para un mejor estilo visual -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>

<body class="bg-light">
    <div class="container py-5">
        <header class="text-center mb-5">
            <h1 class="fw-bold text-primary">Productos disponibles</h1>
            <p class="text-muted fs-5 mb-0">Listado general de productos en stock</p>
        </header>

        <main>
            <section>
                <!-- Contenedor principal con estilo de tarjeta y sombra -->
                <div class="card shadow-sm border-0">
                    <!-- Usamos Flexbox para alinear el título a la izquierda y el botón a la derecha -->
                    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                        <h2 class="h5 mb-0">Listado de Productos</h2>
                        
                        <!-- Botón Crear movido y estilado con btn-success -->
                        <a asp-controller="Productos" asp-action="Create" class="btn btn-success btn-sm">
                            <i class="bi bi-plus-circle-fill me-1"></i> Crear Nuevo
                        </a>
                    </div>
                    
                    <div class="card-body p-0">
                        <!-- Tabla con hover, alineación vertical media y sin margen inferior -->
                        <table class="table table-hover align-middle mb-0">
                            <!-- Cabecera de tabla de color claro -->
                            <thead class="table-light">
                                <tr>
                                    <th hidden>ID</th>
                                    <th>Descripción</th>
                                    <th>Precio</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var producto in Model)
                                {
                                    <tr>
                                        <td hidden>@producto.IdProducto</td>
                                        <td>@producto.Descripcion</td>
                                        <td>$@producto.Precio</td>
                                        <td>
                                            <a asp-controller="Productos" asp-action="Update"
                                                asp-route-IdProducto="@producto.IdProducto" asp-route-Descripcion="@producto.Descripcion" asp-route-Precio="@producto.Precio"
                                                class="btn btn-sm btn-outline-warning me-2">
                                                Modificar
                                            </a>
                                            @* antes esto estaba como un enlace igual al de Modificar, pero lo correcto es usar un formulario POST en la vista, lo que garantiza que la solicitud llegue como POST, y no como GET al controller *@
                                            <form asp-controller="Productos" asp-action="Delete"
                                                asp-route-IdProducto="@producto.IdProducto" method="post" class="d-inline"
                                                class="btn btn-sm btn-outline-danger">
                                                <button type="submit" class="btn btn-sm btn-outline-danger" title="Eliminar Producto">
                                                    <i class="bi bi-trash"></i> Eliminar
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </section>
        </main>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
