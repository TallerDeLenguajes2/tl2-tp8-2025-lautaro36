@model List<TiendaElectronica.ViewModels.ProductoIndexViewModel>
@{
    ViewData["Title"] = "Home Page";
}

<!doctype html>
<html lang="es">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <title>Listado de Productos</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
    <div class="container py-4">
        <header class="mb-4 text-center">
            <h1 class="mb-3">Productos disponibles</h1>
        </header>

        <main>
            <section>
                <h2 class="h4 mb-3">Listado de productos</h2>
                <table class="table table-striped table-bordered align-middle shadow-sm bg-white">
                    <thead class="table-primary">
                        <tr>
                            <th hidden>ID</th>
                            <th>Descripción</th>
                            <th>Precio</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var producto in Model)
                        {
                            <tr>
                                <td hidden>@producto.IdProducto</td>
                                <td>@producto.Descripcion</td>
                                <td>$@producto.Precio</td>
                                <td>
                                    <a asp-controller="Productos" asp-action="Modificar" asp-route-idProducto="@producto.IdProducto" class="btn btn-sm btn-warning me-2">
                                        Modificar
                                    </a>
                                    <a asp-controller="Productos" asp-action="Eliminar" asp-route-idProducto="@producto.IdProducto" class="btn btn-sm btn-danger" onclick="return confirm('¿Estás seguro que quieres eliminar el elemento?')">
                                        Eliminar
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </section>
        </main>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
