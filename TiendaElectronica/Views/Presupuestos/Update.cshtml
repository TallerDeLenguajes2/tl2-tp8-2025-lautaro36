@model TiendaElectronica.ViewModels.PresupuestoViewModel;
@{
    ViewData[index: "Title"] = "Modificar un producto";
}


<!doctype html>
<html lang="es">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <title>Modificar un presupuesto</title>
    <!-- Incluye Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body class="bg-light">
    <div class="container py-5">

        <header class="text-center mb-5">
            <h1 class="fw-bold text-primary">Modificacion de presupuestos</h1>
            <p class="text-muted fs-5 mb-0">Modifique un presupuesto existente</p>
        </header>

        <main>
            <section>
                <!-- Contenedor principal con estilo de tarjeta y sombra -->
                <div class="card shadow-lg border-0">
                    <div class="card-header bg-primary text-white">
                        <h2 class="h5 mb-0">Edite cada campo</h2>
                    </div>
                    
                    <!-- Adaptación para formulario: utiliza p-4 para padding dentro del body -->
                    <div class="card-body p-4">
                        <form asp-controller="Presupuestos" asp-action="Update" method="post">
                            
                            <div class="mb-3">
                                <label asp-for="@Model.NombreDestinatario" class="form-label fw-semibold">Destinatario</label>
                                <input asp-for="@Model.NombreDestinatario" class="form-control" placeholder="@Model.NombreDestinatario" />
                                <span asp-validation-for="@Model.NombreDestinatario" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="@Model.FechaCreacion" class="form-label fw-semibold">Fecha de
                                    Creación</label>
                                <input asp-for="@Model.FechaCreacion" class="form-control" type="date" />
                                <span asp-validation-for="@Model.FechaCreacion" class="text-danger"></span>
                            </div>
                            
                            <button type="submit" class="btn btn-primary mt-3 w-100">
                                <i class="bi bi-save me-2"></i> Modificar
                            </button>
                            
                            <a asp-controller="Presupuestos" asp-action="Index" class="btn btn-outline-secondary mt-2 w-100">
                                Volver al Listado
                            </a>
                        </form>
                    </div>
                </div>
            </section>
        </main>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    
    @*Iconos de Bootstrap*@
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</body>

</html>