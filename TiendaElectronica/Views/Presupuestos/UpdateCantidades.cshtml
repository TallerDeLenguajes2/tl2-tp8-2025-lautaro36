@model TiendaElectronica.ViewModels.DetalleUpCantidadesViewModel;

@{
    ViewData["Title"] = "Modificar cantidades del producto";
}

<!doctype html>
<html lang="es">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <title>Modificar Cantidades</title>
    <!-- Incluye Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Incluye iconos para un mejor estilo visual -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>

<body class="bg-light">
    <div class="container py-5">

        <header class="text-center mb-5">
            <h1 class="fw-bold text-primary">Modificar Detalle</h1>
            <p class="text-muted fs-5 mb-0">Actualice la cantidad para el producto seleccionado</p>
        </header>

        <main>
            <section>
                <!-- Contenedor principal con estilo de tarjeta y sombra -->
                <div class="card shadow-lg border-0">
                    <div class="card-header bg-primary text-white">
                        <h2 class="h5 mb-0">Seleccione la nueva cantidad</h2>
                    </div>

                    <!-- Adaptación para formulario: utiliza p-4 para padding dentro del body -->
                    <div class="card-body p-4">
                        <form asp-controller="Presupuestos" asp-action="UpdateCantidades" method="post">
                            
                            <!-- Descripción del Producto (como texto informativo) -->
                            <div class="mb-3">
                                <label class="form-label fw-bold text-dark">Producto:</label>
                                <p class="lead mb-0">@Model.Descripcion</p>
                            </div>
                            
                            <div class="mb-3">
                                <label asp-for="Cantidad" class="form-label fw-semibold">Nueva Cantidad</label>
                                <input asp-for="Cantidad" class="form-control" type="number" step="1" min="1"
                                    placeholder="Ej: 5" />
                                <span asp-validation-for="@Model.Cantidad" class="text-danger"></span>
                            </div>

                            <!-- Campos ocultos necesarios para el Model Binding POST -->
                            <input type="hidden" asp-for="IdPresupuesto">
                            <input type="hidden" asp-for="IdProducto">
                            <input type="hidden" asp-for="Descripcion">

                            <button type="submit" class="btn btn-primary mt-3 w-100">
                                <i class="bi bi-arrow-repeat me-2"></i> Modificar Cantidad
                            </button>

                            <a asp-controller="Presupuestos" asp-action="Index"
                                class="btn btn-outline-secondary mt-2 w-100">
                                <i class="bi bi-arrow-left me-2"></i> Volver al Listado
                            </a>
                        </form>
                    </div>
                </div>
            </section>
        </main>
    </div>

    <!-- Scripts de Bootstrap 5 -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- Scripts de validación (Incluidos para consistencia) -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.20.0/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/4.0.0/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>