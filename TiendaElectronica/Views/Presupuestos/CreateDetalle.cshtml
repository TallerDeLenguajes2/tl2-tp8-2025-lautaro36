@model TiendaElectronica.ViewModels.DetalleCreateViewModel
@{
    ViewData["Title"] = "Crear un presupuesto";
}

<!doctype html>
<html lang="es">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <title>Alta de Presupuesto</title>
    <!-- Incluye Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Incluye iconos para un mejor estilo visual -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>

<body class="bg-light">
    <div class="container py-5">

        <header class="text-center mb-5">
            <h1 class="fw-bold text-primary">Nuevo Detalle</h1>
            <p class="text-muted fs-5 mb-0">Agregue un producto al presupuesto</p>
        </header>

        <main>
            <section>
                <!-- Contenedor principal con estilo de tarjeta y sombra -->
                <div class="card shadow-lg border-0">
                    <div class="card-header bg-primary text-white">
                        <h2 class="h5 mb-0">Complete cada campo</h2>
                    </div>

                    <!-- Adaptaci칩n para formulario: utiliza p-4 para padding dentro del body -->
                    <div class="card-body p-4">
                        <form asp-controller="Presupuestos" asp-action="CreateDetalle" method="post">

                            <!-- Grupo para la selecci칩n del producto -->
                            <div class="mb-3">
                                <label for="IdProducto">Producto</label>
                                <select name="IdProducto"
                                    asp-items="@(new SelectList(Model.ListadoProductos, "IdProducto", "Descripcion"))"
                                    class="form-control"> @* asp-items="@(new SelectList(...))" genera los <option> autom치ticamente, usando value=Id, text=Descripcion *@                                    
                                    <option value="">-- Seleccion치 un producto --</option>
                                </select>
                            </div>

                            <div class="mb-3">
                                <label for="Cantidad" class="form-label fw-semibold">Cantidad</label>
                                <input name="Cantidad" class="form-control" type="number" step="1" min="1"
                                    placeholder="Ej: 1" />
                                <span for="Cantidad" class="text-danger"></span>
                            </div>

                            <input type="hidden" value="@Model.IdPresupuesto" name="IdPresupuesto">

                            <button type="submit" class="btn btn-primary mt-3 w-100">
                                <i class="bi bi-save me-2"></i> Agregar presupuesto
                            </button>

                            <a asp-controller="Presupuestos" asp-action="Index"
                                class="btn btn-outline-secondary mt-2 w-100">
                                Volver al Listado
                            </a>
                        </form>
                    </div>
                </div>
            </section>
        </main>
    </div>

    <!-- Scripts de Bootstrap 5 -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>