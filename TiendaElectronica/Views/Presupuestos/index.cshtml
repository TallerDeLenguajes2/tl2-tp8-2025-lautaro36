@model List<TiendaElectronica.ViewModels.PresupuestoIndexViewModels>

@{
    ViewData[index: "Title"] = "Home Page";
}

<!doctype html>
<html lang="es">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <title>Listado de Presupuestos</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
    <div class="container py-4">
        <header class="mb-4 text-center">
            <h1 class="mb-3">Presupuestos</h1>
        </header>

        <main>
            <section>
                <h2 class="h4 mb-3">Listado de Presupuestos</h2>
                <table class="table table-striped table-bordered align-middle shadow-sm bg-white">
                    <thead class="table-primary">
                        <tr>
                            <th hidden>ID</th>
                            <th>Destinatario del presupuesto</th>
                            <th>Fecha de creacion</th>
                            <th>Subtotal</th>
                            <th>Total IVA</th>
                            <th>Cantidad total de productos</th>
                            <th>Detalles del presupuesto</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var p in Model)
                        {
                            <tr>
                                <td>@p.NombreDestinatario</td>
                                <td>@p.FechaCreacion.ToString("dd/MM/yyyy")</td>
                                <td>$@p.MontoPresupuesto</td>
                                <td>$@p.MontoPresupuestoConIva</td>
                                <td>@p.CantidadProductos</td>
                                <td>
                                    <a asp-controller="Presupuestos" asp-action="Details" asp-route-id="@p.IdPresupuesto" class="btn btn-sm btn-warning me-2"> @*asp-route-(IdPresupuesto) esto debe coincidir con lo que espera el controllre. si el controller espera {id} entonces debe ser asp-route-id y asi *@
                                        Detalles
                                    </a>
                                </td>
                                @* 
                                    <a asp-controller="Productos" asp-action="Eliminar" asp-route-idProducto="@producto.IdProducto" class="btn btn-sm btn-danger" onclick="return confirm('¿Estás seguro que quieres eliminar el elemento?')">
                                        Eliminar
                                    </a> *@
                            </tr>
                        }
                    </tbody>
                </table>
            </section>
        </main>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
