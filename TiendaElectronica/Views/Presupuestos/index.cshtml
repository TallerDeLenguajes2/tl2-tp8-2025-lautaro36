@model List<TiendaElectronica.ViewModels.PresupuestoIndexViewModels>

@{
    ViewData["Title"] = "Listado de Presupuestos";
}

<!doctype html>
<html lang="es">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <title>Listado de Presupuestos</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body class="bg-light">
    <div class="container py-5">
        <header class="text-center mb-5">
            <h1 class="fw-bold text-primary">Presupuestos</h1>
            <p class="text-muted fs-5 mb-0">Listado general de presupuestos disponibles</p>
        </header>

        <main>
            <section>
                <div class="card shadow-sm">
                    <div class="card-header bg-primary text-white">
                        <h2 class="h5 mb-0">Listado de Presupuestos</h2>
                    </div>
                    <div class="card-body p-0">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Destinatario</th>
                                    <th>Fecha de creaci√≥n</th>
                                    <th>Subtotal</th>
                                    <th>Total con IVA</th>
                                    <th>Cantidad total de productos</th>
                                    <th>Detalles</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var p in Model)
                                {
                                    <tr>
                                        <td>@p.NombreDestinatario</td>
                                        <td>@p.FechaCreacion.ToString("dd/MM/yyyy")</td>
                                        <td>$@p.MontoPresupuesto</td>
                                        <td>$@p.MontoPresupuestoConIva</td>
                                        <td>@p.CantidadProductos</td>
                                        <td>
                                            <a asp-controller="Presupuestos" asp-action="Details" asp-route-id="@p.IdPresupuesto"
                                               class="btn btn-sm btn-outline-primary">
                                                Detalles
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </section>
        </main>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
