@model List<TiendaElectronica.ViewModels.PresupuestoViewModel>

@{
    ViewData["Title"] = "Listado de Presupuestos";
}

<!doctype html>
<html lang="es">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <title>Listado de Presupuestos</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Incluye iconos para un mejor estilo visual -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>

<body class="bg-light">
    <div class="container py-5">
        <header class="text-center mb-5">
            <h1 class="fw-bold text-primary">Presupuestos</h1>
            <p class="text-muted fs-5 mb-0">Listado general de presupuestos disponibles</p>
        </header>

        <main>
            <section>
                <!-- Tarjeta con sombra consistente -->
                <div class="card shadow-sm border-0">
                    <!-- Header con Flexbox para alinear título y botón -->
                    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                        <h2 class="h5 mb-0">Listado de Presupuestos</h2>
                        <!-- Botón Crear, estilado y movido -->
                        <a asp-controller="Presupuestos" asp-action="Create" class="btn btn-success btn-sm">
                            <i class="bi bi-plus-circle-fill me-1"></i> Crear Nuevo Presupuesto
                        </a>
                    </div>
                    <div class="card-body p-0">
                        <!-- Tabla con hover y sin margen inferior -->
                        <table class="table table-hover align-middle mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Destinatario</th>
                                    <th>Fecha de creación</th>
                                    <th>Subtotal</th>
                                    <th>Total con IVA</th>
                                    <th>Cantidad total de productos</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var p in Model)
                                {
                                    <tr>
                                        <td>@p.NombreDestinatario</td>
                                        <td>@p.FechaCreacion?.ToString("dd/MM/yyyy")</td>
                                        <td>$@p.MontoPresupuesto</td>
                                        <td>$@p.MontoPresupuestoConIva</td>
                                        <td>@p.CantidadProductos</td>
                                        
                                        <td>
                                            <a asp-controller="Presupuestos" asp-action="Details" asp-route-id="@p.IdPresupuesto"
                                               class="btn btn-sm btn-outline-info me-2" title="Ver Detalles">
                                                <i class="bi bi-eye"></i> Detalles
                                            </a>
                                            <a asp-controller="Presupuestos" asp-action="Update" asp-route-IdPresupuesto="@p.IdPresupuesto"
                                               asp-route-NombreDestinatario="@p.NombreDestinatario" asp-route-FechaCreacion="@p.FechaCreacion"
                                               class="btn btn-sm btn-outline-warning me-2" title="Modificar Presupuesto">
                                                <i class="bi bi-pencil-square"></i> Modificar
                                            </a>
                                            
                                            <form asp-controller="Presupuestos" asp-action="Delete"
                                                  asp-route-IdPresupuesto="@p.IdPresupuesto" method="post" class="d-inline">
                                                <button type="submit" class="btn btn-sm btn-outline-danger" title="Eliminar Presupuesto">
                                                    <i class="bi bi-trash"></i> Eliminar
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </section>
        </main>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
