@model TiendaElectronica.ViewModels.PresupuestoIndexViewModels
@{
    ViewData["Title"] = "Detalles del producto";
}


<!doctype html>
<html lang="es">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <title>Listado de Presupuestos</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body class="bg-light">
    <div class="container py-4">
        <header class="mb-4 text-center">
            <h1 class="mb-3">Presupuesto para @Model.NombreDestinatario</h1>
        </header>

        <main>
            <section>
                <h2 class="h4 mb-3">Detalle del presupuesto</h2>
                <table class="table table-striped table-bordered align-middle shadow-sm bg-white">
                    <thead class="table-primary">
                        <tr>
                            <th hidden>ID</th>
                            <th>Fecha de creacion</th>
                            <th>Subtotal</th>
                            <th>Total IVA</th>
                            <th>Cantidad total de productos</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>@Model.FechaCreacion.ToString("dd/MM/yyyy")</td>
                            <td>$@Model.MontoPresupuesto</td>
                            <td>$@Model.MontoPresupuestoConIva</td>
                            <td>@Model.CantidadProductos</td>
                            @* 
                                    <a asp-controller="Productos" asp-action="Eliminar" asp-route-idProducto="@producto.IdProducto" class="btn btn-sm btn-danger" onclick="return confirm('¿Estás seguro que quieres eliminar el elemento?')">
                                        Eliminar
                                    </a> *@
                        </tr>
                    </tbody>
                </table>
                <table class="table table-striped table-bordered align-middle shadow-sm bg-white">
                    <thead class="table-primary">
                        <tr>
                            <th>Producto</th>
                            <th>ID del producto</th>
                            <th>Precio</th>
                            <th>Cantidad del producto</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var detalle in Model.ListadoDetalles)
                        {

                            <tr>
                                <td>@detalle.Producto.Descripcion</td>
                                <td>$@detalle.Producto.IdProducto</td>
                                <td>$@detalle.GetPrecio()</td>
                                <td>@detalle.Cantidad</td>
                            </tr>
                        }
                        @* 
                                    <a asp-controller="Productos" asp-action="Eliminar" asp-route-idProducto="@producto.IdProducto" class="btn btn-sm btn-danger" onclick="return confirm('¿Estás seguro que quieres eliminar el elemento?')">
                                        Eliminar
                                    </a> *@
                    </tbody>
                </table>
            </section>
        </main>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>