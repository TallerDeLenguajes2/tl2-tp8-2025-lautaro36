@model TiendaElectronica.ViewModels.PresupuestoIndexViewModels
@{
    ViewData["Title"] = "Detalles del producto";
}

<!doctype html>
<html lang="es">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <title>Listado de Presupuestos</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body class="bg-light">
    <div class="container py-5">
        <header class="text-center mb-5">
            <h1 class="fw-bold text-primary">Presupuesto para @Model.NombreDestinatario</h1>
            <p class="text-muted fs-5 mb-0">Detalles del presupuesto</p>
        </header>

        <main>
            <section class="mb-5">
                <div class="card shadow-sm">
                    <div class="card-header bg-primary text-white">
                        <h2 class="h5 mb-0">Resumen del presupuesto</h2>
                    </div>
                    <div class="card-body p-0">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Fecha de creaci√≥n</th>
                                    <th>Subtotal</th>
                                    <th>Total con IVA</th>
                                    <th>Cantidad total de productos</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>@Model.FechaCreacion.ToString("dd/MM/yyyy")</td>
                                    <td>$@Model.MontoPresupuesto</td>
                                    <td>$@Model.MontoPresupuestoConIva</td>
                                    <td>@Model.CantidadProductos</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </section>

            <section>
                <div class="card shadow-sm">
                    <div class="card-header bg-secondary text-white">
                        <h2 class="h5 mb-0">Detalles de los productos</h2>
                    </div>
                    <div class="card-body p-0">
                        <table class="table table-striped table-bordered align-middle mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Producto</th>
                                    <th>ID del producto</th>
                                    <th>Precio</th>
                                    <th>Cantidad</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var detalle in Model.ListadoDetalles)
                                {
                                    <tr>
                                        <td>@detalle.Producto.Descripcion</td>
                                        <td>@detalle.Producto.IdProducto</td>
                                        <td>$@detalle.GetPrecio()</td>
                                        <td>@detalle.Cantidad</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </section>
        </main>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
