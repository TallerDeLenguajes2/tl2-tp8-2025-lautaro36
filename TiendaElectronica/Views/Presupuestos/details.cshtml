@model TiendaElectronica.ViewModels.PresupuestoViewModel
@{
    ViewData["Title"] = "Detalles del presupuesto";
}

<!doctype html>
<html lang="es">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <title>Detalles del Presupuesto</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Incluye iconos para un mejor estilo visual -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>

<body class="bg-light">
    <div class="container py-5">
        <header class="text-center mb-5">
            <h1 class="fw-bold text-primary">Presupuesto para @Model.NombreDestinatario</h1>
            <p class="text-muted fs-5 mb-0">Detalles y desglose de los productos incluidos en el presupuesto.</p>
        </header>

        <main>
            <!-- SECCIÓN 1: RESUMEN DEL PRESUPUESTO -->
            <section class="mb-5">
                <div class="card shadow-sm border-0">
                    <!-- Header con Flexbox para alinear título y botón -->
                    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                        <h2 class="h5 mb-0">Resumen del presupuesto</h2>
                        <!-- Botón para volver al listado de presupuestos -->
                        <a asp-controller="Presupuestos" asp-action="Index" class="btn btn-outline-light btn-sm">
                            <i class="bi bi-arrow-left me-1"></i> Volver al Listado
                        </a>
                    </div>
                    <div class="card-body p-0">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Fecha de creación</th>
                                    <th>Subtotal</th>
                                    <th>Total con IVA</th>
                                    <th>Cantidad total de productos</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>@Model.FechaCreacion?.ToString("dd/MM/yyyy")</td>
                                    <td>$@Model.MontoPresupuesto</td>
                                    <td>$@Model.MontoPresupuestoConIva</td>
                                    <td>@Model.CantidadProductos</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </section>

            <!-- SECCIÓN 2: DETALLES DE LOS PRODUCTOS -->
            <section>
                <div class="card shadow-sm border-0">
                    <!-- Header con Flexbox para alinear título y botón -->
                    <div class="card-header bg-secondary text-white d-flex justify-content-between align-items-center">
                        <h2 class="h5 mb-0">Detalles de los productos</h2>
                        <!-- Botón para añadir detalle (Movido y estilizado) -->
                        <a asp-controller="Presupuestos" asp-action="CreateDetalle" asp-route-IdPresupuesto="@Model.IdPresupuesto" class="btn btn-success btn-sm">
                            <i class="bi bi-cart-plus-fill me-1"></i> Añadir Producto
                        </a>
                    </div>
                    <div class="card-body p-0">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Producto</th>
                                    <th class="text-center">ID del producto</th>
                                    <th class="text-end">Precio Unitario</th>
                                    <th class="text-center">Cantidad</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var detalle in Model.ListadoDetalles)
                                {
                                    <tr>
                                        <td>@detalle.Producto.Descripcion</td>
                                        <td class="text-center text-muted small">@detalle.Producto.IdProducto</td>
                                        <td class="text-end">$@detalle.GetPrecio()</td>
                                        <td class="text-center fw-bold">@detalle.Cantidad</td>
                                        
                                        <td>
                                            <!-- Botón Modificar Cantidad -->
                                            <a asp-controller="Presupuestos" asp-action="UpdateCantidades"
                                                asp-route-IdPresupuesto="@Model.IdPresupuesto"
                                                asp-route-IdProducto="@detalle.Producto.IdProducto"
                                                asp-route-Descripcion="@detalle.Producto.Descripcion"
                                                asp-route-Cantidad="@detalle.Cantidad"
                                                class="btn btn-sm btn-outline-warning me-2" title="Modificar Cantidad">
                                                <i class="bi bi-pencil"></i> Cantidad
                                            </a>

                                            <!-- Formulario Eliminar Detalle (POST) -->
                                            <form asp-controller="Presupuestos" asp-action="DeleteDetalle" method="post"
                                                class="d-inline">
                                                <input type="hidden" asp-for="IdPresupuesto">
                                                <input type="hidden" name="IdProducto" value="@detalle.Producto.IdProducto">
                                                
                                                <button type="submit" class="btn btn-sm btn-outline-danger"
                                                    title="Eliminar producto">
                                                    <i class="bi bi-trash"></i> Eliminar
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </section>
        </main>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
